pipeline
{
    agent any 
        stages {
            stage('Pull'){
                steps{
                    script{
                        checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                            userRemoteConfigs: [[
                                credentialsId: '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',
                                url: 'https://github.com/KHazem/devops.git'
                            ]]]
                        )
                    }
                }
            }
            stage('Build'){
                steps{
                    script{
                        sh "Ansible-playbook ansible/build.yml -i ansible/inventory/host.yml"
                    }
                }
            }
        }
}