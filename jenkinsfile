pipeline
{
    agent any 
        stages {
            stage('Pull'){
                steps{
                    script{
                        checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                            userRemoteConfigs: [[
                                credentialsId: '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',
                                url: 'https://github.com/KHazem/devops.git'
                            ]]]
                        )
                    }
                }
            }
            stage('Build'){
                steps{
                    script{
                        sh 'ansible-playbook ansible/build.yml -i ansible/inventory/host.ini'
                    }
                }
            }
        }
}